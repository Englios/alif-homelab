# Minecraft Server DNS Configuration
MINECRAFT_DOMAIN=play-mc.alifaiman.cloud
MINECRAFT_SUBDOMAIN=play-mc
BASE_DOMAIN=alifaiman.cloud

# DNS Record Configuration
A_RECORD_NAME=play-mc
SRV_RECORD_NAME=_minecraft._tcp.play-mc
CUSTOM_SRV_NAME=_minecraft.play-mc

# DNS Settings
DNS_TTL=300
SRV_PRIORITY=0
SRV_WEIGHT=5

# Cloudflare API (store in Kubernetes secrets)
# CF_API_TOKEN=your_cloudflare_api_token
# CF_ZONE_ID=your_zone_id
# CF_SRV_RECORD_ID=your_srv_record_id

# Bore Server Configuration (store in Kubernetes secrets)
# BORE_SERVER_IP=your_bore_server_ip
# BORE_SERVER_TYPE=digitalocean_or_homelab

# Tunnel Server Configuration (store in Kubernetes secrets) 
# TUNNEL_SERVER_IP=your_digitalocean_server_ip
# TUNNEL_AUTH=username:password_for_chisel 